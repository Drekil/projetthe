{% extends 'base.html.twig' %}

{% block title %}titre{% endblock %}

{% block body %}

    <main class='container'>
        <section class='row list-contenu'>
            <div class='col-12 title-home'>
                <h1>Site de Thé</h1>
                <p>Bienvenue dans la boutique</p>
            </div>

            {% for category in categories %}
                {% if category.parent == null %}
                    <div class="col-12 parent-categories-title">
                    <h2>{{ category.name }}</h2>
                    </div>
                    {% else %}
                        <div class="child-categories-title">
                            <a href="{{ path('categories_list', {slug: category.slug})}}">
                                <h3>{{ category.name }}</h3>
                            </a>
                        </div>
                        {% for product in category.products %}
                        {% if loop.revindex <= "8" %}
                            <div class="col-2 categories">
                                <a href="{{ path('products_details', {slug: product.slug}) }}">
                                    <div class="">
                                        <div class="d-flex flex-column card-body h-100">
                                            <div>
                                                <img src="{{ asset('assets/uploads/products/mini/300x300-' ~ product.images[0].name )}}" class="card-img-top circle" alt="{{ product.name }}">
                                            </div>
                                            <div>
                                                <h4 class="card-title">{{ product.name }}</h4>
                                            </div>
                                            <div class="">
                                                <p class="card-text mt-auto">{{ (product.price / 100)|number_format(2) }}€</p>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        {% endif %}
                        {% endfor %}
                {% endif %}
            {% endfor %}
        </section>
    </main>

{% endblock %}
